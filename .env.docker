# ===========================================
# Configuration Docker - Registre de Permanence
# ===========================================
# Copiez ce fichier en .env avant de lancer Docker:
#   cp .env.docker .env
#   docker compose up -d

# Application
APP_NAME="Registre de Permanence"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_PORT=8080
APP_TIMEZONE=Africa/Nouakchott
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

# Docker User (pour éviter les problèmes de permissions)
# Sur Linux: id -u && id -g
USER_ID=1000
GROUP_ID=1000

# Base de données MySQL
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=registre_permanence
DB_USERNAME=registre
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootpassword
DB_EXTERNAL_PORT=3307

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_EXTERNAL_PORT=6380

# Cache et Sessions
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_STACK=single

# Filesystem
FILESYSTEM_DISK=local

# Mail (désactivé par défaut)
MAIL_MAILER=log
MAIL_HOST=null
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Filament
FILAMENT_FILESYSTEM_DISK=public

# Vite (pour le développement)
VITE_APP_NAME="${APP_NAME}"
