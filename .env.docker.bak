# Configuration Docker - Registre de Permanence
# Copier vers .env: cp .env.docker .env

APP_NAME="Registre de Permanence"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8080
APP_PORT=8080
APP_TIMEZONE=Africa/Nouakchott
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

# Docker UID/GID (Linux: id -u && id -g)
UID=1000
GID=1000

# SQLite (par defaut)
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite

# Cache et Sessions (fichiers)
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=sync

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Filesystem
FILESYSTEM_DISK=local
FILAMENT_FILESYSTEM_DISK=public

# Mail
MAIL_MAILER=log
